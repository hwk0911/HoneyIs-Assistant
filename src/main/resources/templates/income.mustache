{{>layout/header}}

<div class="container">
    <input type="text" style="display:none" id="year" value="{{year}}">
    <input type="text" style="display:none" id="month" value="{{month}}">
    <h1>
        <button type="button" class="btn btn-primary" id="btn-prevMonth"> < </button>
        {{year}}년 {{month}}월 매출 목록
        <button type="button" class="btn btn-primary" id="btn-nextMonth"> > </button>
    </h1>
    </br>
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">DATE</th>
            <th scope="col">PRICE</th>
            <th scope="col">MEMO</th>
        </tr>
        </thead>
        <tbody>
        {{#incomeList}}
            <tr>
                <td>{{date}}</td>
                <td>{{price}}</td>
                <td>{{memo}}</td>
            </tr>
        {{/incomeList}}
        </tbody>
    </table>
</div>
</br>

{{>layout/footer}}