{{>layout/header}}

<div class="container">
    <!-- 분석 결과 출력 -->
{{#orderAnalyze}}
        <table class="table table-hover table-dark">
            <caption>"{{key}}" 발주처 주문 목록</caption>
            <thead>
            <tr>
                <th width="*">PRODUCT NAME</th>
                <th width="15%">COLOR</th>
                <th width="15%">SIZE</th>
                <th width="10%">AMOUNT</th>
            </tr>
            </thead>
            <tbody>
            {{#value}}
                <tr>
                    <td>{{productName}}</td>
                    <td>{{color}}</td>
                    <td>{{size}}</td>
                    <td>{{amount}}</td>
                </tr>
            {{/value}}
            </tbody>
        </table>
{{/orderAnalyze}}
{{^orderAnalyze}}
        <table class="table table-hover table-dark">
            <caption>발주 목록이 없습니다.</caption>
            <thead>
            <tr>
                <th width="*">PRODUCT NAME</th>
                <th width="15%">COLOR</th>
                <th width="15%">SIZE</th>
                <th width="10%">AMOUNT</th>
            </tr>
            </thead>
        </table>
{{/orderAnalyze}}

{{>layout/footer}}